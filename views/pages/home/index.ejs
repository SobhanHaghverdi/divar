<div class="main-gird-posts">
  <div class="main-post">
    <%advertisements.forEach(advertisement => {%>
    <a href="/api/advertisements/<%=advertisement._id%>" class="post-link">
      <article>
        <div class="main-post-detail">
          <h2 class="main-post-title"><%=advertisement.title%></h2>
          <div class="main-post-price"><%=advertisement.amount%> تومان</div>
          <div class="main-post-time">
            <%=moment(advertisement.createdAt).locale("fa").format(`jDD jMMMM
            HH:mm`)%>
          </div>
        </div>
        <div class="main-post-thumbnail">
          <img src="/uploads/<%=advertisement.imagesName[0]%>" alt="" />
        </div>
      </article>
    </a>
    <%})%>
  </div>
</div>
